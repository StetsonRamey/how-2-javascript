<!DOCTYPE html>
<html lang="{{ site.lang }}" class="{{ classes.html }}">
  <head>
    {% include head.html %} {% if env == 'production' %} {% capture css %}{%
    include style.min.css %}{% endcapture %}
    <style>
      {{ css }}
    </style>
    {% else %}
    <link rel="stylesheet" href="/assets/style.css" />
    {% endif %}
    <title>{{ site.title }}</title>
  </head>

  <body class="{{ classes.bodyGuide }}">
    <div class="col-start-1 col-end-5">
      {% include header.html %}
    </div>
    <main
      id="main-content"
      style="scroll-margin-top: 5rem;"
      class="max-w-none px-3 mt-32 col-start-2 col-end-3"
    >
      {{ content }}
      <div class="max-w-xl mx-auto">
        {% include footer.html %}
      </div>
    </main>
  </body>
</html>
